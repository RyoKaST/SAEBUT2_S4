<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Vert3_palette">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accueil"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="50dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/rounded_background_vert1"
        android:visibility="visible">

        <Button
            android:id="@+id/faire_don"
            android:layout_width="wrap_content"
            android:layout_height="70sp"
            android:layout_gravity="center"
            android:backgroundTint="@color/Vert1_palette"
            android:text="Effectuer un don" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/donation_list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="15dp"
        android:layout_below="@id/title"
        android:padding="10dp"
        android:background="@drawable/rounded_background_vert1">
    </LinearLayout>

</FrameLayout>