<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@color/Vert3_palette">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_marginStart="0dp"
        >

        <ImageView
            android:layout_width="176dp"
            android:layout_height="match_parent"
            android:src="@drawable/logo_solidall"/>
    </LinearLayout>
    <!-- Titre -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingBottom="16dp" />

    <!-- Sous-titre -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saisissez vos coordonnées bancaires :"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:paddingBottom="16dp" />

    <!-- Conteneur arrondi -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:orientation="vertical">

        <!-- Numéro de carte -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Numéro de carte :"
            android:textSize="16sp"
            android:padding="16dp"
            android:paddingBottom="15dp"
            android:textColor="@android:color/black" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="0123 4567 8910 1112"
            android:inputType="number"
            android:background="@drawable/input_background"
            android:padding="8dp"
            />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date d'expiration :"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="MM/YY"
                    android:inputType="date"
                    android:background="@drawable/input_background"
                    android:padding="8dp"/>



            <!-- CVC -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CVC :"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="CVC"
                    android:inputType="numberPassword"
                    android:background="@drawable/input_background"
                    android:padding="8dp"/>
            </LinearLayout>

    </LinearLayout>

    <!-- Boutons de navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonNext"
            android:layout_width="309dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:backgroundTint="@color/Orange_palette"
            android:text="@string/je_valide_mon_paiement"
            android:textColor="@color/black" />
        <Button
            android:id="@+id/buttonBack"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="@string/retour"
            android:textColor="@color/black" />

    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/rounded_bottom_nav_background"
        android:elevation="8dp"
        android:fitsSystemWindows="false"
        app:itemIconSize="36dp"
        app:itemIconTint="@drawable/bottom_nav_selector"
        app:itemTextColor="@drawable/bottom_nav_selector"
        app:itemPaddingTop="20dp"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu"
        android:layout_marginTop="10dp"/>

</LinearLayout>
