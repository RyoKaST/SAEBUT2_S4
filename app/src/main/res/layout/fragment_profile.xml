<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Vert3_palette">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Compte"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"/>

    <LinearLayout
        android:id="@+id/connected_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Information"
            android:textSize="24sp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/account_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User : XXXXX"
            android:textSize="18sp"
            android:layout_gravity="center"/>
        <!-- Logout Button -->
        <Button
            android:id="@+id/logout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/Vert3_palette"
            android:text="@string/logout"
            android:textColor="@color/white"
            android:layout_marginTop="20dp" />
    </LinearLayout>

    <!-- Si l'utilisateur n'est pas connectÃ© -->
    <LinearLayout
        android:id="@+id/not_connected_layout"
        android:layout_width="match_parent"
        android:layout_margin="50dp"
        android:layout_height="190dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/rounded_background_vert1"
        android:visibility="visible">

        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="70sp"
            android:layout_gravity="center"
            android:backgroundTint="@color/Vert3_palette"
            android:layout_marginBottom="20sp"
            android:text="@string/connexion" />

        <Button
            android:id="@+id/signup_button"
            android:layout_width="wrap_content"
            android:layout_height="70sp"
            android:layout_gravity="center"
            android:backgroundTint="@color/Vert3_palette"
            android:text="@string/inscription" />
    </LinearLayout>

</RelativeLayout>